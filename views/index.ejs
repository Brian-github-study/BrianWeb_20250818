<!DOCTYPE html>
<html lang="zh-TW">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>部落格首頁</title>
  <link rel="stylesheet" href="/style.css">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>

  <%- include ("partials/nav") %>

    <!-- <hr style="margin: 0.5rem;"> -->
    <section>
      <h2>文章列表</h2>
      <div id="posts-container">
        <!-- JS 會動態生成文章卡片 -->
      </div>

    </section>

    <script>
      // 文章
      fetch('/post/api/posts')
        .then(res => res.json())
        .then(data => {

          const container = document.getElementById('posts-container');
          const posts = data.posts;
          posts.forEach(post => {
            const parser = new DOMParser();
            const doc = parser.parseFromString(post.content, "text/html");
            const title = doc.querySelector("h1")?.innerText || "（無標題）";
            const div = document.createElement('div');
            div.innerHTML = `
            <div class="card mb-3" style="width: 18rem;">
              <div class="card-body">
                <div class="excerpt"><a href="/post/posts/${post._id}">${title}</a></div>
                <p class="card-text">${new Date(post.createdAt).toLocaleString()}</p>
                <% if (user && user.level == "admin") { %>
                <a href="/post/postedit/${post._id}" class="btn btn-primary">Edit</a>
                <a href="/post/postdelete/${post._id}" class="btn btn-danger">Delete</a>
                <% } %>
              </div>
            </div>
            `;
            container.appendChild(div);
          });
        });
    </script>
</body>

</html>